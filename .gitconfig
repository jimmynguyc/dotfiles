[push]
	default = simple
  autoSetupRemote = true
  followTags = true
[user]
	name = Jimmy Ngu
	email = jimmynguyc@gmail.com
	signingkey = /Users/jimmy/.ssh/id_rsa_personal.pub
[merge]
	tool = opendiff
  conflictstyle = zdiff3 
[mergetool]
	keepBackup = false
  prompt = false
  trustExitCode = true
[core]
	excludesfile = /Users/jimmy/.gitignore_global
	autocrlf = input
[pull]
	ff = only
	rebase = true
[init]
	defaultBranch = master
[url "git@gitlab.com:"]
	insteadOf = https://gitlab.com/
[url "git@github.com:"]
	insteadOf = https://github.com/
[commit]
	verbose = true
	gpgsign = true
[rerere]
	enabled = 1
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
[column]
  ui = auto
[branch]
  sort = -committerdate
[tag]
  sort = version:refname
[diff]
  algorithm = histogram
  colorMoved = plain
  mnemonicPrefix = true
  renames = true
[fetch]
  prune = true
  pruneTags = true
  all = true
[help]
  autocorrect = prompt
[alias]
	co = checkout
  ci = commit
  st = status
  br = branch
  type = cat-file -t
  dump = cat-file -p
	cp = cherry-pick
  d = diff
  dc = diff --cached
  p = pull
  pr = pull --rebase
  main-branch = "! git remote show origin | grep 'HEAD branch' | awk '{print $3}'"
  prom = "! git pull --rebase origin $(git main-branch)"
  mt = mergetool
  rbc = rebase --continue
  wip = "! git add -A; git rm $(git ls-files --deleted) 2> /dev/null; git commit --no-verify --no-gpg-sign -m '--wip-- [skip ci]'"
  piw = "! git log -n 1 | grep -q -- '--wip--' && git reset HEAD~1"
  hist = log --abbrev=7 --pretty=format:\"%h %ad %<(8,trunc)%an | %s%d [%an]\" --graph --date=short
[gpg]
	format = ssh
